<h1 class="vclAlignCentered">{{t 'emails.common.adminGreeting'}}</h1>

<h3 class="vclAlignCentered">
  {{t 'emails.orderNotification.info'}}
</h3>

<p class="vclAlignCentered">
  <a href="{{abLink}}">{{t 'emails.common.openInAdmin'}}</a>
</p>

<br>

<table id="invoicemeta" class="vclNoBorder vclFloatRight" style="min-width: 18em;">
  <tr>
    <td><b>{{t 'emails.orderConfirmation.orderNumber'}}</b></td>
    <td class="vclAlignRight">{{orderNumber}}</td>
  </tr>
  <tr>
    <td><b>{{t 'emails.orderConfirmation.orderDate'}}</b></td>
    <td class="vclAlignRight">{{df orderDate}}</td>
  </tr>
</table>

<div class="vclClear"></div>
<br>
<br>

<table id="address" class="vclTable">
  <tbody>
    {{#if deliveryAddress}}
      <tr>
        <td class="vclSpan-10p">Email</td>
        <td>{{person.email}}</td>
      </tr>
      <tr>
        <td class="vclSpan-10p">Name</td>
        <td>{{deliveryAddress.familyName}} {{deliveryAddress.givenName}}</td>
      </tr>
      <tr>
        <td class="vclSpan-10p">{{t 'emails.orderConfirmation.deliveryAddress'}}</td>
        <td>{{deliveryAddress.givenName}} {{deliveryAddress.familyName}}</td>
      </tr>
      <tr>
        <td> </td>
        <td>{{deliveryAddress.street}}</td>
      </tr>
      <tr>
        <td> </td>
        <td>{{deliveryAddress.postcode}} {{deliveryAddress.locality}}</td>
      </tr>
      <tr>
        <td> </td>
        <td>{{deliveryCountry.name}}</td>
      </tr>
      <tr>
        <td> </td><td> </td>
      </tr>
    {{/if}}
    {{#if billingAddress}}
      <tr>
        <td class="vclSpan-10p">{{t 'emails.orderConfirmation.billingAddress'}}</td>
        <td>
          {{#if billingAddress.legalName}}{{billingAddress.legalName}}<br>{{/if}}
          {{billingAddress.givenName}} {{billingAddress.familyName}}
        </td>
      </tr>
      <tr>
        <td> </td>
        <td>{{billingAddress.street}}</td>
      </tr>
      <tr>
        <td> </td>
        <td>{{billingAddress.postcode}} {{billingAddress.locality}}</td>
      </tr>
      <tr>
        <td> </td>
        <td>{{billingCountry.name}}</td>
      </tr>
    {{/if}}
  </tbody>
</table>

<table id="items" class="vclTable vclSumTable">
  <thead>
    <tr>
      <th>{{t 'emails.orderConfirmation.position'}}</th>
      <th>{{t 'emails.orderConfirmation.name'}}</th>
      <th>{{t 'emails.orderConfirmation.quantity'}}</th>
      <th class="vclAlignRight">{{t 'emails.orderConfirmation.price'}}</th>
      <th class="vclAlignRight">{{t 'emails.orderConfirmation.total'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
      <tr>
        <td>{{i}}</td>
        <td>{{{name}}}
        {{#if voucher}}
          <br> {{voucher}}
        {{/if}}</td>
        <td>{{quantity}}</td>
        <td class="vclAlignRight">{{nfc fullPrice}} {{cs}}</td>
        <td class="vclAlignRight">
            {{nfc total}} {{cs}}
            {{#if freeTax}}
              *
            {{/if}}
        </td>
      </tr>
    {{/each}}
    {{#if hasShipping}}
      <tr>
        <td colspan="3">{{t 'emails.orderConfirmation.shipping'}}</td>
        <td colspan="2" class="vclAlignRight">{{nfc shipping}} {{cs}}</td>
      </tr>
    {{/if}}
    {{#if hasPaymentFee}}
      <tr>
        <td colspan="3">{{t 'components.cart.paymentFees'}}</td>
        <td colspan="2" class="vclAlignRight">{{nfc paymentFee}} {{cs}}</td>
      </tr>
    {{/if}}
    <tr class="vclNoBorder">
      <td colspan="5">&nbsp;</td>
    </tr>
    {{#if taxList}}
      {{#each taxList}}
        <tr class="vclNoBorder">
          <td colspan="3">{{taxName}}</td>
          <td colspan="2" class="vclAlignRight">{{nfc taxAmount}} {{cs}}</td>
        </tr>
      {{/each}}
    {{/if}}

    {{#if voucherResources}}
      {{#each voucherResources}}
        <tr class="vclNoBorder">
          <td colspan="3">{{t 'emails.orderConfirmation.voucher'}}: {{code}}</td>
          <td colspan="2" class="vclAlignRight">({{nfc value}}) {{../cs}}</td>
        </tr>
      {{/each}}
    {{/if}}

    {{#if discount}}
      <tr class="vclNoBorder">
        <td colspan="3">{{t 'emails.orderConfirmation.discount'}}</td>
        <td colspan="2" class="vclAlignRight">{{nfc discount}} {{cs}}</td>
      </tr>
    {{/if}}

    <tr class="vclSumTableTotal">
      <td colspan="3">{{t 'emails.orderConfirmation.total'}}</td>
      <td colspan="2" class="vclAlignRight">{{nfc total}} {{cs}}</td>
    </tr>
  </tbody>
</table>

<br>

{{#if hasFree}}
  <p>* {{t 'message.free_tax'}}</p>
{{/if}}

{{#if comment}}
  <b>{{t 'emails.orderConfirmation.comment'}}:</b><br>
  <p>{{comment}}</p>
{{/if}}

<p class="vclAlignCentered">
  {{t 'emails.orderConfirmation.paymentMethod'}}: {{paymentMethodAdditionalType.name}}
</p>
